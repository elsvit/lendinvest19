{
  "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
  "linterOptions": {
    "exclude": ["config/**/*.js", "node_modules/**/*.ts"]
  },
  "rules": {
    "no-console": false,
    "no-shadowed-variable": false,
    "jsx-no-lambda": false,
    "no-inferrable-types": [true, "ignore-params"],
    "no-var-requires": false
  }
}
